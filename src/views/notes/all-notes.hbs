<div class="row">
    {{#each notes}}
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{title}} <a href="/notes/edit/{{_id}}"><i class="far fa-edit"></i></a>
                    </h4>
                    <p>{{description}}</p>
                    <form action="/notes/destroy/{{_id}}" method="POST">
                        <button class="btn btn-danger btn-block btn-sm">
                            Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    {{else}}
        <div class="card mx-auto">
            <div class="card-body">
                <p class="lead">There are not notes yet</p>
                <a href="/notes/create" class="btn btn-success btn-block">Create One</a>
            </div>
        </div>
    {{/each}}
</div>